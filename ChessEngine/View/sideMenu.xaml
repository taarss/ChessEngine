<UserControl x:Class="ChessEngine.View.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChessEngine.View"
             mc:Ignorable="d" 
             d:DesignHeight="480" d:DesignWidth="320"
             DataContext="{StaticResource boardViewModel}">
    <Grid>
        <Canvas>
            <Rectangle x:Name="background" Height="480" Width="320"></Rectangle>
            <StackPanel Orientation="Horizontal" Height="400" Width="202" Canvas.Left="38" Canvas.Top="38">
                <ItemsControl ItemsSource = "{Binding Debuger.MoveRecordings, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock FontSize="20" Foreground="White" Text="{Binding}"></TextBlock>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Canvas>   
    </Grid>
</UserControl>
